<div class="comments">
    {{!-- this refers to the parent object/array thats availabe in the context of the partial --}}
    {{#each this}}
    <section class="comment">
        <div class="meta">
            {{user.username}} on {{format_date created_at}}
        </div>
        <div class="text">
            {{comment_text}}
        </div>
    </section>
    {{/each}}
</div>